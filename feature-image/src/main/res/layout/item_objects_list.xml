<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/object_type_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/filter_by_object_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:contentDescription="@string/search_images_by_object"
        android:padding="8dp"
        android:src="@drawable/magnify_24"
        android:tint="?attr/colorOnSecondary" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/locate_object_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:contentDescription="@string/show_object_on_the_image"
        android:padding="8dp"
        android:src="@drawable/bullseye_24"
        android:tint="?attr/colorOnSecondary" />

</LinearLayout>